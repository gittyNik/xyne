schema people {
    document people {
        field name type string {
            indexing: index | attribute | summary
            index {
                enable-bm25
            }
        }

        # primary email
        field email type string {
            indexing: index | attribute | summary
            index {
                enable-bm25
            }
        }
    
        # the source of the people data
        # workspace director or contacts
        # we can encode the app here itself
        field source type string {
            indexing: attribute | summary
            attribute: fast-search
            match: exact
        }
        field photoLink type string {
            indexing: attribute | summary
        }

        field aliases type array<string> {
            indexing: attribute | summary
        }

        field langauge type string {
            indexing: attribute | summary
        }
        field isAdmin type bool {
            indexing: attribute | summary
        }

        field delegatedAdmin type bool {
            indexing: attribute | summary
        }

        field suspended type bool {
            indexing: summary | attribute
        }

        field archieved type bool {
            indexing: summary | attribute
        }
        field creationTime type long {
            indexing: summary | attribute
            attribute: fast-search
        }
        field lastLoggedIn type long {
            indexing: summary | attribute
            attribute: fast-search
        }

        field fullname type string {
            indexing: summary | attribute
        }
    }
}